<style type="text/css">
#portfolio {
	width: 300px;
	height: 300px;
	border: 1px solid #ee3680;
	background-color: #1e1b1c;
	margin-left: 40px;
	border-radius: 10px;
	float: left;
}

#box{
	width: 800px;
	height: 301px;
}

#form{
	width: 420px;
	height: 300px;
	border: 1px solid #ee3680;
	background-color: #1e1b1c;
	float: right;
	border-radius: 10px;		
}

.text{
	font-family:"Lucida Calligraphy";
	font-size: 22px;
	color: #ee3680;
	text-align: left;
	padding: 15px;
}

.black_overlay{
	display: none;
	position: absolute;
	top: 0%;
	left: 0%;
	width: 100%;
	height: 100%;
	background-color: black;
	z-index:1001;
	-moz-opacity: 0.8;
	opacity:.80;
	filter: alpha(opacity=80);
}
 
.white_content{
	display: none;
	position: absolute;
	top: 12%;
	left: 25%;
	width: 50%;
	height: 65%%;
	padding: 16px;
	border: 16px solid black;
	background-color: white;
	z-index:1002;
	overflow: auto;
}

.img1{	width: 180px;	height: 250px;  float: left; padding:10px 15px;}
.img2{	width: 180px;	height: 250px;  float: right; padding:10px 15px;}

.img_f{	width: 100%;}
</style>
<div id="box">
	<div id="portfolio">
		<div class="text">
			<br>
			<%= link_to "Cartazes", portfolio_path, :style => 'text-decoration: none; color: #ee3680; padding-left:10px;' %>
			<br><br>
			<%= link_to "Fotografia", fotografia_path, :style => 'text-decoration: none; color: #ee3680; padding-left:10px;' %>
			<br><br>
			<%= link_to "Editorial", editorial_path, :style => 'text-decoration: none; color: #faf9f9; padding-left:10px;' %>
		</div>	
	</div>
	
	<div id="form">
		<p><a href = "javascript:void(0)" onclick = "document.getElementById('light1').style.display='block';document.getElementById('fade').style.display='block'"><img src= "image/capa.jpg" class= "img1"></a></p>
		<div id="light1" class="white_content"><a href = "javascript:void(0)" onclick = "document.getElementById('light1').style.display='none';document.getElementById('fade').style.display='none'"><img src= "image/capa.jpg" class= "img_f"></a></div>
		<div id="fade" class="black_overlay"></div>

		<p><a href = "javascript:void(0)" onclick = "document.getElementById('light2').style.display='block';document.getElementById('fade').style.display='block'"><img src= "image/capa2.jpg" class= "img2"></a></p>
		<div id="light2" class="white_content"><a href = "javascript:void(0)" onclick = "document.getElementById('light2').style.display='none';document.getElementById('fade').style.display='none'"><img src= "image/capa2.jpg" class= "img_f"></a></div>
		<div id="fade" class="black_overlay"></div>
	</div>
</div>